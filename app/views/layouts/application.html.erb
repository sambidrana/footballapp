<!DOCTYPE html>
<html>
  <head>
    <title>PremierleagueApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav>

     <% if @current_user.present? && @current_user.admin? %>
          <%= link_to "Edit Club", clubs_edit_path	%> |
          <%= link_to "Edit National Team", edit_national_teams_path  %> |
          <%= link_to "Edit Player", players_path %> |
        <% end%>

    <% if @current_user.present?%>
        <%= link_to "Log out #{ @current_user.email }" , login_path, :method => :delete %>
    <% end %>

    

  </nav>

    <%= yield %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>PremierleagueApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-5 rounded-bottom">
  
  <div class="container-fluid">
    <%# <a class="navbar-brand" href="#">OneFootball.com</a> %>
    <h2 class="navbar-brand">OneFootball.com</h2>
    
    <% if @current_user.present? %>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
        <%= link_to "Premier League Clubs", clubs_path, :class => "nav-link active"	 %> 
        </li>
        <li class="nav-item">
        <%= link_to "National Teams", national_teams_path, :class => "nav-link active" %> 
        </li>


          <% if @current_user.present? && @current_user.admin? %>

         <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            More...
          </a>
     

          <ul class="dropdown-menu">
          <li> <%= link_to "List of all PL Player", players_path, :class => 'dropdown-item' %> </li>
          </ul>
          
           <% end%>
        </li>

        <li class='nav-item'>
        <% if @current_user.present?%>
        <%= link_to "Log out #{ @current_user.email }" , login_path, :method => :delete, :class => "nav-link"	 %>
        <% end %>
        </li>
<% end%>
        
    </div>
  </div>
</nav>
    
  </nav>

    <div class='container parent-container'>
    
    <%= yield %>
   
    </div>
  
  
  
  
  
  </body>
</html>


<div class='p-5'>

    <h1>Sign in</h1>

    <% if flash[:error].present?%>
    <h2>
        <%= flash[:error] %>
    </h2>
    <% end%>

    <div class='d-flex align-items-center justify-content-center p-5'>
        <%= form_tag login_path do %>
        <div class='d-flex align-items-center mb-4'>
            <%= label_tag :email, 'Email:', :class => 'form-label me-5' %>
            <%= email_field_tag :email,nil, :class => 'form-control-lg' %>
        </div>
    
        <div class='d-flex align-items-center'>
            <%= label_tag :password, 'Password:', :class => 'form-label me-3' %>
            <%= password_field_tag :password, nil, :class => 'form-control-lg' %>
        </div>

        <div class='d-flex justify-content-center mt-4'>
            <%= submit_tag "Sign In", :class => 'btn btn-primary' %>
        </div>
        <% end%>

    </div>
</div>

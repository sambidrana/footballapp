
<div class="p-5">
<%= form_for @national_team do |f| %>
    <div class="mb-3">
    <%= f.label :name, :class => 'form-label' %>
    <%= f.text_field :name, :class => 'form-control mb-4', :required => true %>

    <%= f.label :coach, :class => 'form-label'  %>
    <%= f.text_field :coach, :class => 'form-control'  %>
    </div>

    <%= f.label :logo, :class => 'form-label'  %>
    <%= f.url_field :logo, :class => 'form-control mb-4'  %>

    <%= f.label :cups_won, "Fifa Ranking", :class => 'form-label' %>
    <%= f.text_field :cups_won, :class => 'form-control-sm'  %>

    <%= f.submit :class => 'btn btn-primary ms-5' %>

<% end%>
</div>

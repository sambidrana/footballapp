
<div class="p-3">
  <div class='d-flex align-items-center'>
    <h1>Add or Edit players</h1> 
    <%= link_to "Add New Player", new_player_path, :class => 'btn btn-primary  ms-3' %>
  </div>

    <ul>
      <% @players.each do |player| %>
        <li class='mb-2'>
        <%= link_to player.name,  edit_player_path(player.id) %> playing for <%= player.club.name %>
          <% if player.national_team.present? %>
            and <%= player.national_team.name %>
          <% else %>

          <% end %>
        </li>
      <% end %>
    </ul>
</div>